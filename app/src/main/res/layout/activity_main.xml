<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aziflaj.braintrainer.MainActivity">

    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fbff00"
        android:padding="8dp"
        android:text="30s"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="2 + 3"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/score_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#ff398a"
        android:padding="8dp"
        android:text="0/0"
        android:textSize="30sp" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/restart_btn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timer_text_view"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/button1"
            android:layout_column="0"
            android:tag="25"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#8b67a5"
            android:onClick="score"
            android:text="25"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button2"
            android:tag="35"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#8ed379"
            android:onClick="score"
            android:text="35"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button3"
            android:tag="29"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#00ced1"
            android:onClick="score"
            android:text="29"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button4"
            android:tag="39"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#dd0a2b"
            android:onClick="score"
            android:text="39"
            android:textSize="40sp" />
    </GridLayout>


    <TextView
        android:id="@+id/message_test_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Your score is 5/10"
        android:textSize="30sp" />

    <Button
        android:id="@+id/restart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_test_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:onClick="restart"
        android:text="Start New Game" />


</RelativeLayout>
